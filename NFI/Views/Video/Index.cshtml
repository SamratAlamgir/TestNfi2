@using NFI.Helper
@model NFI.Models.VideoDto

@section scripts
{
    <script src="~/Scripts/Video/Video.js"></script>
}

@{
    ViewBag.Title = "Tilskudd til videodistribusjon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tilskudd til videodistribusjon</h2>

<form id="MainForm" class="form-horizontal" action="@Html.GetHostServerUrl()/Video/Save" enctype="multipart/form-data" method="post">
