                        </span>
                            @Html.ValidationMessageFor(model => model.Dokumentasjon, "", new {@class = "text-danger"})
                        </div>
                    </div>
              
                </div>
                <div class="tab-pane" id="tab2">
                    <div class="form-group">
                        <h3> Visuelt materiale</h3>
                        <hr/>
                        @Html.LabelFor(model => model.EventueltVisueltMateriale, htmlAttributes: new {@class = "control-label col-md-5"})
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.EventueltVisueltMateriale, new {htmlAttributes = new {@class = "form-control"}})
