                            @Html.EditorFor(model => model.Søkerspoststed, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.Søkerspoststed, "", new {@class = "text-danger"})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Søkersland, htmlAttributes: new {@class = "control-label col-md-5 label-required"})
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Søkersland, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.Søkersland, "", new {@class = "text-danger"})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Søkersepost, htmlAttributes: new {@class = "control-label col-md-5 label-required"})
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Søkersepost, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.Søkersepost, "", new {@class = "text-danger"})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Målforreisen, htmlAttributes: new {@class = "control-label col-md-5 label-required"})
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Målforreisen, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.Målforreisen, "", new {@class = "text-danger"})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Beskrivelse, htmlAttributes: new {@class = "control-label col-md-5 label-required"})
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Beskrivelse, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.Beskrivelse, "", new {@class = "text-danger"})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Budsjettfortiltak, htmlAttributes: new {@class = "control-label col-md-5 label-required"})

                        <div class="col-md-7">
                            <span class="btn btn-default btn-file">
                            @Html.TextBoxFor(model => model.Budsjettfortiltak, new {type = "file"})
                        </span>
                            @Html.ValidationMessageFor(model => model.Budsjettfortiltak, "", new {@class = "text-danger"})
