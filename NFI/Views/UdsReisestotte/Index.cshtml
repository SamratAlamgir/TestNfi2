@using NFI.Helper
@model NFI.Models.UdsReisestotteDto

@section scripts
{
    <script src="~/Scripts/UdsReisestotte/UdsReisestotte.js"></script>
}

@{
    ViewBag.Title = "UDs reisestøtte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UDs reisestøtte</h2>
<form id="MainForm" class="form-horizontal" action="@Html.GetHostServerUrl()/UdsReisestotte/Save" enctype="multipart/form-data" method="post">

    <div id="rootwizard" class="container well panel col-sm-8">
        <ul style="display: none">
            <li><a href="#tab1" data-toggle="tab"></a></li>
            <li><a href="#tab2" data-toggle="tab"></a></li>
        </ul>
        <br/>

        <div class="tab-content">
            <div class="tab-pane" id="tab1">
               
                    <div class="form-group">
                        @Html.LabelFor(model => model.Søkersnavn, htmlAttributes: new {@class = "control-label col-md-5 label-required"})
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Søkersnavn, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.Søkersnavn, "", new {@class = "text-danger"})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Søkerspostadresse, htmlAttributes: new {@class = "control-label col-md-5 label-required"})
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Søkerspostadresse, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.Søkerspostadresse, "", new {@class = "text-danger"})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Søkerspoststed, htmlAttributes: new {@class = "control-label col-md-5 label-required"})
