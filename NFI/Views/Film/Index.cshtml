@using NFI.Helper
@model NFI.Models.FilmDto
@section scripts
{
    <script src="~/Scripts/Ordninger/ordninger.js"></script>
}
@{
    ViewBag.Title = "Film";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form id="commentForm" class="form-horizontal" action="@Html.GetHostServerUrl()/Film/Create" enctype="multipart/form-data" method="post">
