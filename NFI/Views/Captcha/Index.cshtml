@model NFI.Models.CaptachaModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Index", "Captcha", new { returnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
{
    <div class="container">
        <div class="form-group row col-lg-offset-2">
            <a href="@Url.Action("Index")">
                <img alt="Captcha" src="@Url.Action("CaptchaImage")" style="" />
            </a>
            <div>
                <a href="@Url.Action("Index")">Try Another</a>
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.Captcha, new { @class = "control-label col-xs-2" })
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Captcha, new { @class = "form-control col-xs-5" })
                @Html.ValidationMessageFor(model => model.Captcha, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row col-lg-offset-4">
            <input class="btn btn-success pull-left" type="submit" name="Submit" />
        </div>
    </div>

}