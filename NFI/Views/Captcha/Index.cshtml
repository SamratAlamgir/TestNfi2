@model NFI.Models.CaptachaModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Index", "Captcha", new { returnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
{
    <div class="container well panel col-sm-8">
        <h2>Solve the math puzzle to proceed.</h2>
        <div class="form-group row col-lg-offset-3">
            <a href="@Url.Action("Index")">
                <img alt="Captcha" src="@Url.Action("CaptchaImage")" style=""/>
            </a>
            <div>
                <a href="@Url.Action("Index")">Try Another</a>
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.Captcha, new {@class = "control-label col-xs-3"})
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Captcha, new {@class = "form-control col-xs-8"})
                @Html.ValidationMessageFor(model => model.Captcha, null, new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group row col-xs-6 col-xs-offset-7">
            <input class="btn btn-success" type="submit" name="Submit" value="Submit"/>
        </div>
    </div>

}